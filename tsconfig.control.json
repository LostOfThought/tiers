{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["lua-types/5.2", "typed-factorio/runtime"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared"],
      "@control/*": ["control"], 
    }
  },
  "include": [
    "./src/control/**/*.ts",
    "./src/shared/**/*.ts"
  ],
  "exclude": [
    "./src/data",
    "./src/settings"
  ],
} 