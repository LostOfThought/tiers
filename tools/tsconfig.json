{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "../dist-tools",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      // "*": ["node_modules/*"]
    },
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "../dist-tools"]
} 