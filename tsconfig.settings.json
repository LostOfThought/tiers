{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["lua-types/5.2", "typed-factorio/settings"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared"],
      "@setting/*": ["settings"],
    }
  },
  "include": [
    "./src/settings/**/*.ts",
    "./src/shared/**/*.ts"
  ],
  "exclude": [
    "./src/data",
    "./src/control"
  ],
} 